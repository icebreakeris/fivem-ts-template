{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "baseUrl": "./",
    "lib": ["ES2017"],
    "types": ["@citizenfx/server", "@types/node"],
    "paths": {
      "shared/*": ["../shared/*"]
    },
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": true
  },
  "include": ["./**/*", "../shared/**/*"],
  "exclude": ["**/node_modules", "**/__tests__/*"]
}
